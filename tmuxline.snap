# This tmux statusbar config was created by tmuxline.vim
# on Tue, 01 Sep 2020

set -g status-justify "centre"
set -g status "on"
set -g status-left-style "none"
set -g message-command-style "fg=colour145,bg=colour236"
set -g status-right-style "none"
set -g pane-active-border-style "fg=colour114"
set -g status-style "none,bg=colour236"
set -g message-style "fg=colour145,bg=colour236"
set -g pane-border-style "fg=colour236"
set -g status-right-length "100"
set -g status-left-length "100"
setw -g window-status-activity-style "underscore,fg=colour114,bg=colour238"
setw -g window-status-separator ""
setw -g window-status-style "none,fg=colour114,bg=colour238"
set -g status-left "#[fg=colour235,bg=colour114] #S #[fg=colour114,bg=,nobold,nounderscore,noitalics]#[fg=colour114,bg=] #(whoami)  #(uptime | cut -d \" \" -f3,4,5,6,7 | cut -d \",\" -f1,2) #[fg=,bg=,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=colour236,bg=,nobold,nounderscore,noitalics]#[fg=colour145,bg=colour236] %r  %a  %d/%m/%Y #[fg=colour114,bg=colour236,nobold,nounderscore,noitalics]#[fg=colour235,bg=colour114] #H "
setw -g window-status-format "#[fg=,bg=,nobold,nounderscore,noitalics]#[default] #I  #W #[fg=,bg=,nobold,nounderscore,noitalics]"
setw -g window-status-current-format "#[fg=,bg=colour236,nobold,nounderscore,noitalics]#[fg=colour145,bg=colour236] #I  #W  #F #[fg=colour236,bg=,nobold,nounderscore,noitalics]"
