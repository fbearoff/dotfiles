[papers]
dir = ~/onedrive/Documents/papers
ref-format = {doc[author_list][0][family]}-{doc[year]}
add-folder-name = {doc[year]}/{doc[author_list][0][family]}/{doc[title]:.20}
add-file-name = {doc[year]}-{doc[author_list][0][family]}-{doc[title]:.20}

[settings]
default-library = papers
use-git = True
picktool = fzf
add-confirm = True
add-edit = True
header-format = <ansiblue><b>{doc.html_escape[title]}</b></ansiblue> <ansimagenta>({doc.html_escape[year]})</ansimagenta>
                <ansicyan>{doc.html_escape[author]}</ansicyan>
                <ansiwhite>{doc.html_escape[tags]}</ansiwhite>

[tui]
editmode = vi
move_down_key = j
move_up_key = k
